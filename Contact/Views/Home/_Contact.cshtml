@{
    Layout = null;
}
@model IEnumerable<Contact>
<table id="conTable" class="table table-datatable table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Note</th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {

                <tr id="tr-@item.Concod" onclick="RowSelect('@item.Concod');">
                    <td>@item.Name</td>
                    <td>
                        @item.Phone
                    </td>
                    <td>@item.Address</td>
                    <td> @item.Note.Substring(0, Math.Min(item.Note.Length, 50))</td>
                    <td>
                        <a id="Ed-@item.Concod" class="btn btn-success" onclick="Edite('@item.Concod');">
                            Edite
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Note</th>
            <th>Operation</th>
        </tr>
    </tfoot>
</table>