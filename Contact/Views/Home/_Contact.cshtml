@{
    Layout = null;
}
@model IEnumerable<Contact>
<table id="conTable" class="table table-datatable table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Note</th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {

                <tr>
                    <td>@item.Name</td>
                    <td>
                        @item.Phone
                    </td>
                    <td>@item.Address</td>
                    <td> @item.Note.Substring(0, Math.Min(item.Note.Length, 50))</td>
                    <td>X</td>
                </tr>
            }
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Rendering engine</th>
            <th>Browser</th>
            <th>Platform(s)</th>
            <th>Engine version</th>
            <th>CSS grade</th>
        </tr>
    </tfoot>
</table>