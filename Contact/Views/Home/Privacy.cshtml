@{
    ViewData["Title"] = "Privacy Policy";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between">
                    <h3 class="card-title">Contact Data</h3>
                    <a class="btn btn-success" onclick="New()">
                        New
                    </a>
                </div>
            </div>

            <table id="Contacts" class="table table-striped table-bordered dt-responsive nowrap">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Contact Name</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Note</th>
                        <th>Actions</th>
                    </tr>
                </thead>
        </div>
    </div>
</div>
@section Scripts {
    @* <script src="~/lib/datatable/datatables/jquery.dataTables.js"></script>
    <script src="~/lib/datatable/datatables-bs4/js/dataTables.bootstrap4.min.js"></script> *@
    <script src="~/js/Views/ContactDatatable.js"></script>
}